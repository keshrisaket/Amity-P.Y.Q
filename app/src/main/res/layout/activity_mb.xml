<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".m_b_a">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:id="@+id/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="@dimen/_15ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M.B.A"
                android:textSize="@dimen/_25ssp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/_15sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEMESTER : 1"
                    android:textAlignment="center"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/sem1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_35ssp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sem1"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_115sdp"
                    android:text="GET"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/button_cust"/>




            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/_15sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEMESTER : 2"
                    android:textAlignment="center"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/sem2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_35ssp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sem2"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_115sdp"
                    android:text="GET"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/button_cust"/>




            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="SEMESTER : 3"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/sem3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_marginTop="@dimen/_35ssp"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sem3"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_115sdp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/button_cust"
                    android:gravity="center"
                    android:text="GET"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardUseCompatPadding="true"
                android:elevation="@dimen/_15sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SEMESTER : 4"
                    android:textAlignment="center"
                    android:textSize="@dimen/_20ssp"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/sem4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_55sdp"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_35ssp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sem4"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_115sdp"
                    android:text="GET"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/button_cust"/>




            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>





</LinearLayout>