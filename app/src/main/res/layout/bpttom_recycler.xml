<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/_8ssp"
        android:layout_width="@dimen/_310sdp"
        android:layout_height="@dimen/_60ssp"
        android:id="@+id/card_bottom_recycler"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_7ssp"
        android:background="#5BFBFB"
        tools:ignore="MissingConstraints">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/bottom_image"
            android:layout_width="@dimen/_70ssp"
            android:layout_height="@dimen/_50ssp"
            android:layout_margin="@dimen/_5ssp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:src="@drawable/baseline_library_books_24"/>

        <TextView
            android:id="@+id/bottom_course"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_50ssp"
            android:layout_marginStart="@dimen/_50ssp"
            android:gravity="center"
            android:text="course"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="59dp"
            android:layout_height="@dimen/_50ssp"
            android:layout_marginStart="@dimen/_260sdp"
            android:layout_marginTop="@dimen/_1ssp"
            android:src="@drawable/baseline_arrow_right_24" />


    </androidx.cardview.widget.CardView>

</LinearLayout>